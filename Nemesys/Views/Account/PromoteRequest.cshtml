@model Nemesys.ViewModels.PromoteViewModel

@{
    ViewData["Title"] = "Request Promotion";
}

<h1>Submit form to become an investigator!</h1>

<form asp-action="PromoteRequest" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Reason" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Reason" class="form-control"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
</form>