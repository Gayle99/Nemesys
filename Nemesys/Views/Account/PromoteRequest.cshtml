@model Nemesys.ViewModels.PromoteViewModel
@{
    ViewData["Title"] = "Request Promotion";

}

<div class="row">
    <div class="row h-100 w-100 justify-content-center align-items-center">
        <h1 class="header-1">Submit form to become an investigator!</h1>
        <div class="col-10 col-md-8 col-lg-8">

            <form class="container" asp-action="PromoteRequest" method="post" role="form" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Reason" class="col-md-2"></label>
                    <textarea asp-for="Reason" class="form-control"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>

                </div>
                <div class="d-flex justify-content-center">
                    <input type="submit" class="btn btn-primary btn-defualt" value="Submit" />
                    </div>
            </form>
        </div>
        </div>
    </div>

