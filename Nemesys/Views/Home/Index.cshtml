
@{
    ViewData["Title"] = "Home Page";
}
    
<div class="home-container">
    <div class="carousel">
        @if (!User.IsInRole("Reporter") && !User.IsInRole("Investigator") && !User.IsInRole("Administrator"))
        {
            <div id="carouselIndicators" class="carousel slide carousel_style" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 carousel_img" src="~/images/carousel_img1.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel_text">Nemesys is a web application for University of Malta students and staff to help keep the campus safe for everyone</h5>
                            <p class="carousel_text">Start using Nemesys now!</p>
                            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register" role="button">Sign Up</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel_img" src="~/images/carousel_img2.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel_text">Want to report a hazard on campus?</h5>
                            <p class="carousel_text">Sign up now to create a report</p>
                            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register" role="button">Sign Up</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel_img" src="~/images/carousel_img3.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel_text">Interested in becoming an investigator?</h5>
                            <p class="carousel_text">Sign up now to apply</p>
                            <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register" role="button">Sign Up</a>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }

        else
        {
            <div id="carouselIndicators" class="carousel slide carousel_style" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 carousel_img" src="~/images/carousel_img1.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel_text">Nemesys is a web application for University of Malta students and staff to help keep the campus safe for everyone</h5>
                            <p class="carousel_text">Start exploring reports now</p>
                            <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Reports" asp-action="Index">See Reports</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel_img" src="~/images/carousel_img2.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel_text">Want to report a hazard on campus?</h5>
                            <p class="carousel_text">Click on the button below to start</p>
                            <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Reports" asp-action="CreateReport">Create a Report</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 carousel_img" src="~/images/carousel_img3.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5 class="carousel_text">Interested in becoming an investigator?</h5>
                            <p class="carousel_text">Click on the button below to apply</p>
                            <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Account" asp-action="PromoteRequest">Apply</a>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            
        }

    </div>
           


    <div class="content">
        <h1 class="text-center">How does Nemesys work?</h1>
        <div class="card card-body col-sm-12 text-center">
            <span class="icon"><i class="fas fa-user-plus"></i></span>
            <h5 class="card-title">Register to become a reporter</h5>
            <p class="card-text">Create reports and upvote other reports that you believe deserve attention</p>
        </div>
        <div class="card card-body col-sm-12 text-center">
            <span class="icon"><i class="fas fa-book-open"></i></span>
            <h5 class="card-title">Create a report on a potential hazard </h5>
            <p class="card-text">Our investigators will view the report and create an investigation </p>
        </div>
        <div class="card card-body col-sm-12 text-center">
            <span class="icon"><i class="fas fa-search"></i></span>
            <h5 class="card-title">Our investigators will inspect the situation</h5>
            <p class="card-text">The investigators will inspect the situation and update the investigation report accordingly </p>
        </div>
    </div>
</div>
