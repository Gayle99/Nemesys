@model ReportsListViewModel

<h1>Nemesys</h1>
<h2>Showing @Model.ReportsCount reports</h2>
<div class="row">
    @foreach (var report in Model.ReportWithUpvotes)
    {
        <div class="card" style="width: 18rem;padding:20px; margin:20px;">
            <img class="card-img-top" src="@report.Report.ImageUrl" alt="Image for @report.Report.Title" />
            <div class="card-body">
                <h3 class="card-title">@report.Report.Title</h3>
                <p class="sm all">@report.Report.DateOfCreation.ToShortDateString()</p>
                <p class="sm all">@report.Upvotes</p>
                <a asp-controller="Reports" asp-action="Details" asp-route-id="@report.Report.Id" class="btn btn-primary">Details</a>
                <a asp-controller="Reports" asp-action="EditReport" asp-route-id="@report.Report.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Reports" asp-action="DeleteReport" asp-route-id="@report.Report.Id" class="btn btn-primary">Delete</a>
                <a asp-controller="Reports" asp-action="UpvoteReport" asp-route-id="@report.Report.Id" class="btn btn-primary">Upvote</a>
                <a asp-controller="Reports" asp-action="CreateInvestigation" asp-route-id="@report.Report.Id" class="btn btn-primary">Investigate</a>

            </div>
        </div>
    }
</div>