@model ChangeStatusViewModel

<h2>Change Status</h2>

<form asp-action="ChangeStatus" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="Id" type="hidden" class="form-control" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="Option" class="col-md-2"></label>
        <div class="col-md-5">
            <select>
                <option value="1">Open</option>
                <option value="2">Closed</option>
                <option value="3">Being investigation</option>
                <option value="4">No action required</option>
            </select>
            <span asp-validation-for="Option" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Change Status" />
            <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-secondary">Back to Home</a>
        </div>
    </div>
</form>