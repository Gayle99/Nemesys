@model CreateInvestigationViewModel

@{
    ViewData["Title"] = "Edit Investigation";
}

<h2 class="header-2">Edit the Investigation</h2>
<div class="row h-100 w-100 justify-content-center align-items-center">
    <form asp-action="EditInvestigation" method="post" role="form" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Id" type="hidden" class="form-control" value="@Model.Id" />

        <div class="form-group">
            <label asp-for="Description" class="col-md-12"></label>
            <div class="col-md-12">
                <textarea asp-for="Description" class="form-control box"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary" value="Edit Report" />
                <a asp-controller="Reports" asp-action="Index" class="btn btn-outline-secondary">Back to Home</a>
            </div>
        </div>
    </form>
    </div>