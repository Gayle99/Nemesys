@@model ReportsListViewModel

<h1>Nemesys</h1>
<h2>Showing report details</h2>
<div class="row">
    @foreach (var report in Model.ReportWithUpvotes)
    {
        <div class="card" style="width: 18rem;padding:20px; margin:20px;">
            <img class="card-img-top" src="@report.Report.ImageUrl" alt="Image for @report.Report.Title" />
            <div class="card-body">
                <h3 class="card-title">@report.Report.Title</h3>
                <p class="sm all">Created By: @report.Report.CreatedBy.Email</p>
                <p class="sm all">Data Created: @report.Report.DateOfCreation.ToShortDateString()</p>
                <p class="sm all">Status: @report.Report.Status</p>
                <p class="sm all">Location: @report.Report.Location</p>
                <p class="sm all">Hazard: @report.Report.TypeOfHazard</p>
                <p class="sm all">@report.Report.Description</p>
                <p class="sm all">@report.Upvotes</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    }
</div>